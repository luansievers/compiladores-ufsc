<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0 http://maven.apache.org/xsd/assembly-1.1.0.xsd">
  <id>entrega</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>resources</directory>
      <outputDirectory>./</outputDirectory>
      <includes>
        <include>relatorio.pdf</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>target/generated-sources/javacc/parser</directory>
      <outputDirectory>java</outputDirectory>
      <includes>
        <include>*.java</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>target/generated-sources/javacc/recovery</directory>
      <outputDirectory>java</outputDirectory>
      <includes>
        <include>*.java</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>target/generated-sources/javacc/syntacticTree</directory>
      <outputDirectory>java</outputDirectory>
      <includes>
        <include>*.java</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>target/classes/parser</directory>
      <outputDirectory>class</outputDirectory>
      <includes>
        <include>*.class</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>target/classes/recovery</directory>
      <outputDirectory>class</outputDirectory>
      <includes>
        <include>*.class</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>target/classes/syntacticTree</directory>
      <outputDirectory>class</outputDirectory>
      <includes>
        <include>*.class</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>src/main/javacc/parser</directory>
      <outputDirectory>jj</outputDirectory>
      <includes>
        <include>*.jj</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>src/main/javacc/code/lexical</directory>
      <outputDirectory>code</outputDirectory>
      <includes>
        <include>*.x</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>src/main/javacc/code/syntactic</directory>
      <outputDirectory>code</outputDirectory>
      <includes>
        <include>*.x</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>target</directory>
      <outputDirectory>log</outputDirectory>
      <includes>
        <include>*.log</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>
